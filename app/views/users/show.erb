<h1>Welcome, <%= @user.name %>!</h1>

<h2>My Reservations</h2>

<ul>
<% @reservations.each do |reservation| %>
    <% if reservation.user_id == current_user.id %>
        <li><a href="/reservations/<%= reservation.id %>"><%= reservation.date.strftime('%a %d %b %Y') %></a></li>
            <ul>
                <li><%= reservation.name %></li>
                <li><%= reservation.resource %></li>
                <li><%= reservation.contact %></li>
            </ul>
        <a href="/reservations/<%= reservation.id %>/edit">Edit Reservation</a>
    <% end %>
<% end %>
</ul>

<p><%= flash[:new_account_success] %></p>