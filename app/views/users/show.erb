<h2><%= @user.name %>'s Reservations</h2>

<a href="/reservations/new">Create a New Reservation</a><br>
<br>
<ul>
<% @reservations.each do |reservation| %>
    <% if reservation.user_id == current_user.id %>
        <li><a href="/reservations/<%= reservation.id %>"><%= reservation.date.strftime('%a %d %b %Y') %></a></li>
            <ul>
                <li><%= reservation.name %></li>
                <li><%= reservation.resource %></li>
                <li><%= reservation.contact %></li>
            </ul>
        <a href="/reservations/<%= reservation.id %>/edit">Edit or Delete Reservation</a><br>
        <br>
    <% end %>
<% end %>
</ul>
<br>
<form method="POST" action='/reservations'>
<input id="hidden" type="hidden" name="_method" value="delete">
<input type="submit" id="submit" value="Delete All Reservations"><br>
</form>